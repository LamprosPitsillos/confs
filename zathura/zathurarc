set notification-error-bg       "#ff5555" # Red
set notification-error-fg       "#f8f8f2" # Foreground
set notification-warning-bg     "#ffb86c" # Orange
set notification-warning-fg     "#22222a" # Selection
set notification-bg             "#222222" # Background
set notification-fg             "#f8f8f2" # Foreground

set completion-bg               "#1e1e1e" # Background
set completion-fg               "#666666" # Comment
set completion-group-bg         "#1e1e1e" # Background
set completion-group-fg         "#666666" # Comment
set completion-highlight-bg     "#303030" # Selection
set completion-highlight-fg     "#f8f8f2" # Foreground

set index-bg                    "#1e1e1e" # Background
set index-fg                    "#f8f8f2" # Foreground
set index-active-bg             "#222222" # Current Line
set index-active-fg             "#f8f8f2" # Foreground

set inputbar-bg                 "#222222" # Background
set inputbar-fg                 "#f8f8f2" # Foreground
set statusbar-bg                "#1e1e1e" # Background
set statusbar-fg                "#f8f8f2" # Foreground

set highlight-color             "#4B69B5" # Blue
set highlight-active-color      "#ff79c6" # Pink

set default-bg                  "#1e1e1e" # Background
set default-fg                  "#f8f8f2" # Foreground

set render-loading              true
set render-loading-fg           "#1e1e1e" # Background
set render-loading-bg           "#f8f8f2" # Foreground

